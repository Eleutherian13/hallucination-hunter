# Hallucination Hunter Environment Configuration
# Copy this file to .env and fill in the values

# ============== Application Settings ==============
APP_NAME=Hallucination Hunter
APP_VERSION=2.0.0
APP_ENV=development
DEBUG=true

# ============== Server Configuration ==============
API_HOST=0.0.0.0
API_PORT=8000
UI_PORT=8501

# ============== Model Configuration ==============
# NLI Model (DeBERTa-v3-base-mnli recommended)
NLI_MODEL_NAME=microsoft/deberta-v3-base-mnli
NLI_DEVICE=cpu

# Embedding Model (MiniLM recommended for efficiency)
EMBEDDING_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DEVICE=cpu

# Correction Model (T5-small for efficiency)
CORRECTION_MODEL_NAME=t5-small
CORRECTION_DEVICE=cpu

# ============== Processing Configuration ==============
# Chunking settings
CHUNK_SIZE=500
CHUNK_OVERLAP=100

# Retrieval settings
RETRIEVAL_TOP_K=7
SIMILARITY_THRESHOLD=0.5
HYBRID_WEIGHT_VECTOR=0.6
HYBRID_WEIGHT_KEYWORD=0.4

# Verification thresholds
ENTAILMENT_THRESHOLD=0.8
CONTRADICTION_THRESHOLD=0.7
ENTITY_MATCH_THRESHOLD=0.9

# ============== Drift Detection ==============
DRIFT_REGENERATION_COUNT=3
DRIFT_VARIANCE_THRESHOLD=0.2
DRIFT_CONFIDENCE_PENALTY=0.1

# ============== Trust Score Weights ==============
WEIGHT_SUPPORTED_RATIO=0.4
WEIGHT_AVG_CONFIDENCE=0.3
WEIGHT_DRIFT_SCORE=0.2
WEIGHT_SEVERITY=0.1

# ============== Database Configuration ==============
DATABASE_URL=sqlite:///./data/hallucination_hunter.db
REDIS_URL=redis://localhost:6379/0

# ============== Caching Configuration ==============
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_DIR=./cache

# ============== Logging Configuration ==============
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ============== API Security ==============
API_KEY_ENABLED=false
API_KEY_SECRET=your-secret-key-here
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ============== External Services (Optional) ==============
# Leave empty if not using external LLM for drift detection
LLM_API_KEY=
LLM_MODEL_NAME=
